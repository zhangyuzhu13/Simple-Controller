<?xml version="1.0" encoding="UTF-8"?>
<OR-Mappings>
    <jdbc>
        <property>
            <name>drive_class</name>
            <value>com.mysql.jdbc.Driver</value>
        </property>
        <property>
            <name>url_path</name>
            <value>jdbc:mysql://localhost:3306/simplecontroller</value>
        </property>
        <property>
            <name>db_username</name>
            <value>root</value>
        </property>
        <property>
            <name>db_password</name>
            <value>123456</value>
        </property>
    </jdbc>
    <class>
        <name>UserBean</name>
        <table>users</table>
        <id>
            <name>userID</name>
        </id>
        <property>
            <name>userName</name>
            <column>name</column>
            <type>String</type>
            <lazy>false</lazy>
        </property>
        <property>
            <name>password</name>
            <column>password</column>
            <type>String</type>
            <lazy>false</lazy>
        </property>
    </class>
</OR-Mappings>